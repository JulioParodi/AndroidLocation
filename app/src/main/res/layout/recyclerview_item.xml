<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewDate" android:layout_margin="10dp"/>
    <TextView
            android:id="@+id/textViewMySpeed"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorBackground"
            app:layout_constraintEnd_toStartOf="@+id/textViewRealSpeed"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="10dp" android:layout_marginEnd="10dp" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:id="@+id/textViewRealSpeed"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorBackground" app:layout_constraintStart_toEndOf="@+id/textViewMySpeed"
            app:layout_constraintHorizontal_bias="1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp" android:layout_marginEnd="10dp" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:layout_marginTop="10dp"
            android:layout_margin="10dp"/>
</LinearLayout>
